# ============================================
# CLOUDFLARE (mandatory)
# ============================================
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_API_TOKEN=your_cloudflare_api_token_with_permissions

# D1 Database
CF_D1_DATABASE_ID=your_d1_database_id

# KV Namespaces
CF_KV_CACHE_ID=your_kv_cache_namespace_id
CF_KV_CONFIG_ID=your_kv_config_namespace_id

# R2 Buckets
CF_R2_UPLOADS_BUCKET=your_r2_uploads_bucket_name
CF_R2_ASSETS_BUCKET=your_r2_assets_bucket_name

# Queues
CF_QUEUE_PUBLISH_ID=your_publish_queue_id
CF_QUEUE_DUNNING_ID=your_dunning_queue_id

# Pages Projects
CF_PAGES_PROJECT_EDITOR=site-builder-editor
CF_PAGES_PROJECT_SITES=site-builder-sites

# Workers
CF_WORKER_NAME_API=site-builder-api

# Environment
CF_ENV=staging # or production


# ============================================
# BILLING PROVIDER (pluggable - example: Stripe)
# ============================================
BILLING_PROVIDER=stripe # stripe, paddle, or custom
BILLING_API_KEY=sk_test_your_stripe_secret_key
BILLING_WEBHOOK_SECRET=whsec_your_webhook_signing_secret
BILLING_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Alternative payment methods
BILLING_PIX_PROVIDER=asaas # or mercadopago, pagar.me, etc.
BILLING_PIX_API_KEY=your_pix_provider_api_key


# ============================================
# EVOLUTION API v1 (WhatsApp - dunning)
# ============================================
EVOLUTION_API_URL=https://your-evolution-api-instance.com
EVOLUTION_API_TOKEN=your_evolution_api_global_token
EVOLUTION_INSTANCE_ID=your_whatsapp_instance_id


# ============================================
# EMAIL / SMTP (optional for notifications)
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
SMTP_FROM_EMAIL=noreply@yoursite.com
SMTP_FROM_NAME="Site Builder"


# ============================================
# GOOGLE / GA4 / ADS (optional wizard defaults)
# ============================================
# These are NOT secrets, just default measurement IDs for wizard
DEFAULT_GA4_MEASUREMENT_ID=G-XXXXXXXXXX
DEFAULT_GTM_CONTAINER_ID=GTM-XXXXXXX
DEFAULT_ADS_CONVERSION_ID=AW-XXXXXXXXX


# ============================================
# OBSERVABILITY (optional)
# ============================================
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
LOG_LEVEL=info # debug, info, warn, error


# ============================================
# JWT / AUTH (for API authentication)
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRY=7d


# ============================================
# TURNSTILE (optional form protection)
# ============================================
TURNSTILE_SITE_KEY=your_turnstile_site_key
TURNSTILE_SECRET_KEY=your_turnstile_secret_key


# ============================================
# APPLICATION
# ============================================
APP_URL=https://app.yoursite.com
SITES_BASE_URL=https://sites.yoursite.com
NODE_ENV=development # development, staging, production
